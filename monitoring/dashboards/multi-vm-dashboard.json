{
  "title": "WorkOS Multi-VM Infrastructure",
  "tags": ["workos", "infrastructure", "multi-vm"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-24h", "to": "now" },

  "inputs": [
    {
      "name": "DS_PROMETHEUS",
      "type": "datasource",
      "pluginId": "prometheus",
      "label": "Prometheus"
    }
  ],

  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "current": {}
      },
      {
        "type": "query",
        "name": "job",
        "label": "job",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(up, job)",
        "includeAll": true,
        "allValue": ".*",
        "refresh": 2,
        "multi": true,
        "current": {}
      }
    ]
  },

  "panels": [
    {
      "id": 1,
      "title": "VM Health Overview",
      "type": "stat",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "up{job=~\"$job\"}",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" } } },
            { "type": "value", "options": { "1": { "text": "UP" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 }
    },

    {
      "id": 2,
      "title": "CPU Usage by VM",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\",job=~\"$job\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 1, "fillOpacity": 10, "showPoints": "never", "thresholdsStyle": { "mode": "line" } },
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "yellow", "value": 70 }, { "color": "red", "value": 90 } ] }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 }
    },

    {
      "id": 3,
      "title": "Memory Usage by VM",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{job=~\"$job\"} / node_memory_MemTotal_bytes{job=~\"$job\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 1, "fillOpacity": 10, "showPoints": "never", "thresholdsStyle": { "mode": "line" } },
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "yellow", "value": 80 }, { "color": "red", "value": 95 } ] }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 }
    },

    {
      "id": 4,
      "title": "Network Traffic by VM",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum by (instance) (rate(node_network_receive_bytes_total{job=~\"$job\",device!~\"lo|docker.*|veth.*\"}[5m]))", "legendFormat": "RX {{instance}}" },
        { "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{job=~\"$job\",device!~\"lo|docker.*|veth.*\"}[5m]))", "legendFormat": "TX {{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps", "color": { "mode": "palette-classic" }, "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 1, "fillOpacity": 10, "showPoints": "never" } } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 }
    },

    {
      "id": 5,
      "title": "Disk Usage by VM",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|aufs|overlay\",job=~\"$job\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|aufs|overlay\",job=~\"$job\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 1, "fillOpacity": 10, "showPoints": "never", "thresholdsStyle": { "mode": "line" } },
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "yellow", "value": 80 }, { "color": "red", "value": 95 } ] }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 }
    },

    {
      "id": 6,
      "title": "Load Average by VM",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "node_load1{job=~\"$job\"}", "legendFormat": "1m {{instance}}" },
        { "expr": "node_load5{job=~\"$job\"}", "legendFormat": "5m {{instance}}" },
        { "expr": "node_load15{job=~\"$job\"}", "legendFormat": "15m {{instance}}" }
      ],
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" }, "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 1, "fillOpacity": 10, "showPoints": "never" } } },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 }
    },

    {
      "id": 7,
      "title": "Application Health by VM",
      "type": "stat",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "up{job=~\"workos.*\"}", "legendFormat": "APP {{instance}}" }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" } } },
            { "type": "value", "options": { "1": { "text": "UP" } } }
          ],
          "thresholds": { "mode": "absolute", "steps": [ { "color": "red" }, { "color": "green", "value": 1 } ] }
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 30 }
    },

    {
      "id": 8,
      "title": "Response Time by VM",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le,instance) (rate(workos_request_duration_seconds_bucket{job=~\"$job\"}[5m])))", "legendFormat": "p95 {{instance}}" },
        { "expr": "histogram_quantile(0.50, sum by (le,instance) (rate(workos_request_duration_seconds_bucket{job=~\"$job\"}[5m])))", "legendFormat": "p50 {{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "color": { "mode": "palette-classic" }, "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 1, "fillOpacity": 10, "showPoints": "never" } } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 30 }
    }
  ]
}
